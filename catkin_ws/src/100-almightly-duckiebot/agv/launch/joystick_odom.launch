<?xml version="1.0" encoding="utf-8"?>
<launch>
	<arg name="veh" doc="Name of vehicle"/>
	<arg name="config" default="baseline"/>
	<arg name="joy_mapper_param_file_name" default="default"/>
    <arg name="joy_param_file_name" default="default"/>
    <arg name="local" default="false"/>
   	<arg name="base_frame" default="base_link_2Dlidar"/>
  	<arg name="odom_frame" default="base_link_2Dlidar"/>   

    <node pkg="tf" type="static_transform_publisher" name="tf_state_node" args="0 0 0 0 0 0 1 map odom_frame 100" />
	<node pkg="tf" type="static_transform_publisher" name="tf_state2_node" args="0 0 0.3 0 0 0 1 base_link_wheel lidar 100" />	
	<node pkg="tf" type="static_transform_publisher" name="tf_state3_node" args="0 0 0.3 0 0 0 1 base_link_2Dlidar velodyne 100" />
    <group unless="$(arg local)">
		<!-- joy -->
		<node ns="$(arg veh)" pkg="joy" type="joy_node" name="joy" output="screen">
			<rosparam command="load" file="$(find duckietown)/config/$(arg config)/joy/joy_node/$(arg joy_param_file_name).yaml"/>
		</node>

	    <!-- joy_mapper -->
	    <include file="$(find agv_joy_mapper)/launch/agv_joy_mapper.launch">
	        <arg name="veh" value="$(arg veh)"/>
	        <arg name="config" value="$(arg config)"/>
	        <arg name="param_file_name" value="$(arg joy_mapper_param_file_name)"/>
	    </include>	

	    <!--pulse_generator -->
		<remap from="pulse_generator_node/car_cmd" to="agv_joy_mapper_node/car_cmd"/>
		<include file="$(find agv_wheel_driver)/launch/agv_wheel_driver.launch">
			<arg name="veh" value="$(arg veh)"/>
			<arg name="config" value="$(arg config)"/>
		</include>	
	</group>

	<!-- wheel_odom -->
	<remap from="wheel_odometry_node/wheel_cmd" to="pulse_generator_node/wheel_cmd"/>
    <include file="$(find agv_odometry_map)/launch/agv_wheel_odometry.launch">
        <arg name="veh" value="$(arg veh)"/>
    </include>

    <!-- hector_slam_2D -->
    <include file="$(find hector_mapping)/launch/mapping_default.launch">
        <arg name="base_frame" default="$(arg base_frame)"/>
  		<arg name="odom_frame" default="$(arg odom_frame)"/> 
    </include>   

</launch>
